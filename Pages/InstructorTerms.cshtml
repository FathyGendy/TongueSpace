@* Pages/InstructorTerms.cshtml *@
@page "/instructor-terms"
@model CoursePLatform.Pages.InstructorTermsModel
@{
    ViewData["Title"] = "Instructor Terms & Conditions";
    var lastUpdated = DateTime.Now.ToString("MMMM yyyy"); // Example: "August 2025"
}

<style>
    body {
        background: linear-gradient(135deg, #f6f9fc, #eef2f7);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .terms-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
    }

    .terms-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .terms-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .terms-header p {
        color: #555;
        font-size: 1.1rem;
    }

    .last-updated {
        display: inline-block;
        background: #e9f2ff;
        color: #2c5282;
        font-size: 0.9rem;
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 500;
        margin-top: 10px;
    }

    .terms-content h3 {
        color: #343a40;
        margin-top: 2rem;
        margin-bottom: 1rem;
        border-left: 4px solid #0d6efd;
        padding-left: 0.75rem;
        font-size: 1.25rem;
        font-weight: 600;
    }
    .terms-section {
        margin-bottom: 2rem;
    }
    .terms-content ul {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }
    .terms-content li {
        margin-bottom: 0.5rem;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="terms-header">
        <h1>@ViewData["Title"]</h1>
        <p class="lead">
            These Instructor Terms and Conditions explain the rules, rights, and obligations of instructors on TongueSpace.  
            Please read carefully before applying or teaching.
        </p>
        <div class="last-updated">
            <i class="bi bi-calendar-event"></i> Last updated: @lastUpdated
        </div>
    </div>

    <div class="terms-card">
        <div class="terms-content">
            <p class="lead text-muted text-center mb-5">
                Welcome to TongueSpace! These Instructor Terms and Conditions govern your relationship with us as an instructor.  
                Please read carefully before continuing.
            </p>

            <!-- Section Blocks -->
            <div class="terms-section">
                <h3><i class="bi bi-person-badge me-2 text-primary"></i>1. Instructor Eligibility</h3>
                <ul>
                    <li>Be at least 18 years old</li>
                    <li>Have demonstrable expertise in your subject</li>
                    <li>Provide accurate application information</li>
                    <li>Agree to our review process</li>
                    <li>Maintain professionalism at all times</li>
                </ul>
            </div>

            <div class="terms-section">
                <h3><i class="bi bi-clipboard-check me-2 text-success"></i>2. Application Process</h3>
                <ul>
                    <li><strong>Review:</strong> Applications are reviewed within 2–3 business days</li>
                    <li><strong>Assessment:</strong> We evaluate teaching and subject expertise</li>
                    <li><strong>Verification:</strong> Information may be verified</li>
                    <li><strong>Decision:</strong> Final acceptance is at our discretion</li>
                </ul>
            </div>

            <div class="terms-section">
                <h3><i class="bi bi-journal-richtext me-2 text-warning"></i>3. Instructor Responsibilities</h3>
                <ul>
                    <li>Create high-quality course content</li>
                    <li>Respond to student inquiries promptly</li>
                    <li>Maintain professional communication</li>
                    <li>Keep content accurate and updated</li>
                    <li>Respect intellectual property rights</li>
                </ul>
            </div>

            <div class="terms-section">
                <h3><i class="bi bi-cash-coin me-2 text-info"></i>5. Revenue Sharing</h3>
                <ul>
                    <li>Instructors earn <strong>70%</strong> of net revenue</li>
                    <li>TongueSpace retains <strong>30%</strong></li>
                    <li>Monthly payouts for earnings above $50</li>
                    <li>Taxes are instructor’s responsibility</li>
                </ul>
            </div>

            <div class="terms-section">
                <h3><i class="bi bi-shield-lock me-2 text-danger"></i>11. Privacy & Data</h3>
                <ul>
                    <li>We follow our <a href="/privacy" class="text-decoration-none fw-bold text-primary">Privacy Policy</a></li>
                    <li>Data protected under applicable laws</li>
                    <li>Industry-standard security practices</li>
                    <li>Sharing limited to platform needs</li>
                </ul>
            </div>

            <div class="alert alert-info mt-5 shadow-sm">
                <h5><i class="bi bi-info-circle me-2"></i>Important Note</h5>
                <p class="mb-0">By submitting your instructor application, you acknowledge that you have read, understood, and agree to be bound by these Instructor Terms and Conditions.</p>
            </div>

            <div class="text-center mt-4">
                <a href="/apply-instructor" class="btn btn-lg btn-primary rounded-pill shadow">
                    <i class="bi bi-arrow-left me-2"></i>Back to Application
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
