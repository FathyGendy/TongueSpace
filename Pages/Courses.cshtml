.arabic-overlay-text {
    position: relative;
    z-index: 2;
    color: #f0f0f0;
    font-family: 'Amiri', 'Arial Unicode MS', 'Tahoma', sans-serif;
    font-size: 1.5rem; /* Reduced from 2rem */
    font-weight: bold;
    letter-spacing: 1px;
    text-shadow: 
        2px 2px 4px rgba(0, 0, 0, 0.8),
        0 0 10px rgba(0, 0, 0, 0.5);
    text-align: center;
    padding: 20px;
    line-height: 1.3;
    direction: rtl;
    unicode-bidi: bidi-override;
}

.course-actions {
