                            <label asp-for="ContactForm.Email" class="form-label">Email Address *</label>
                            <input asp-for="ContactForm.Email" class="form-control" placeholder="your.email@example.com">
                            <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ContactForm.Category" class="form-label">Inquiry Type *</label>
                                    <select asp-for="ContactForm.Category" class="form-select">
                                        <option value="">Select a category</option>
                                        <option value="General">General Inquiry</option>
                                        <option value="Technical">Technical Support</option>
                                        <option value="Courses">Course Questions</option>
                                        <option value="Teaching">Become an Instructor</option>
                                        <option value="Billing">Billing & Payments</option>
                                        <option value="Feedback">Feedback & Suggestions</option>
                                    </select>
                                    <span asp-validation-for="ContactForm.Category" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ContactForm.PreferredLanguage" class="form-label">Preferred Language</label>
                                    <select asp-for="ContactForm.PreferredLanguage" class="form-select">
