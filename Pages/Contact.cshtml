                    <div class="cta-buttons">
                        <a href="#" onclick="document.querySelector('.contact-form').scrollIntoView({behavior: 'smooth'})" class="btn btn-light btn-lg me-3">
                            <i class="bi bi-chat-dots"></i> Send Message
                        </a>
