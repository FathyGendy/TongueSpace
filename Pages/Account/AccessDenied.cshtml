@page
@using CoursePLatform.Pages.Account
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <i class="bi bi-exclamation-triangle-fill text-danger display-1"></i>
            <h1 class="text-danger mt-3">@ViewData["Title"]</h1>
            <p class="lead">You do not have the required permissions to view this page.</p>
            <hr />
            <p>
                If you believe you should have access, please contact support.
            </p>
            <a href="/" class="btn btn-primary mt-3">Return to Home</a>
        </div>
    </div>
</div>